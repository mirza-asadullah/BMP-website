---
// Descripción del hero
interface Props {
  text?: string;
}

const { text = "<strong>Aquí no solo tienes una app.</strong> Tienes tu red sin complicaciones: escribe, compra, paga, explora y transforma tu día… con la claridad de <strong>Be Mind Power.</strong>" } = Astro.props;
---

<p id="hero-subtitle" class="hero-description" set:html={text} />

<style>
  .hero-description {
    color: #ffffff;
    font-family: 'Neometric', 'Inter', sans-serif;
    font-size: clamp(12px, 1.1vw, 18px);
    font-weight: 400;
    line-height: 1.25;
    text-align: center;
    margin: 0 0 clamp(16px, 2vh, 28px) 0;
    padding: 0 5vw;
    max-width: clamp(650px, 70vw, 900px);
  }

  @media (min-width: 1440px) {
    .hero-description {
      font-size: clamp(14px, 1.2vw, 20px);
      line-height: 1.3;
      margin-bottom: clamp(20px, 2.2vh, 32px);
      max-width: clamp(700px, 72vw, 1000px);
    }
  }

  @media (min-width: 1920px) {
    .hero-description {
      font-size: clamp(16px, 1.3vw, 22px);
      line-height: 1.35;
      margin-bottom: clamp(24px, 2.4vh, 36px);
      max-width: clamp(800px, 65vw, 1050px);
    }
  }

  @media (max-width: 768px) {
    .hero-description {
      font-size: 16px;
      line-height: 1.4;
      max-width: 600px;
      margin-bottom: 2vh;
    }
  }

  @media (max-width: 480px) {
    .hero-description {
      font-size: 14px;
      padding: 0 6vw;
      line-height: 1.35;
      margin-bottom: 2vh;
    }
  }

  /* iPhone SE y pantallas muy pequeñas */
  @media (max-width: 375px) {
    .hero-description {
      font-size: 13px;
      line-height: 1.3;
      margin-bottom: 2vh;
      padding: 0 7vw;
    }
  }
</style>
