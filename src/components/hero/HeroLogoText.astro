<div class="hero-logo-text">
  <img src="/images/LOGOBLANCO.svg" alt="BeMind Power" />
</div>

<style>
  .hero-logo-text {
    width: clamp(150px, 16vw, 210px);
    margin-bottom: clamp(8px, 1vh, 14px);
    position: relative;
    z-index: 20;
  }

  @media (min-width: 1440px) {
    .hero-logo-text {
      width: clamp(180px, 18vw, 240px);
      margin-bottom: clamp(10px, 1.1vh, 16px);
    }
  }

  @media (min-width: 1920px) {
    .hero-logo-text {
      width: clamp(200px, 19vw, 260px);
      margin-bottom: clamp(12px, 1.2vh, 18px);
    }
  }

  .hero-logo-text img {
    width: 100%;
    height: auto;
  }

  @media (max-width: 768px) {
    .hero-logo-text {
      display: none;
    }
  }

  @media (max-width: 480px) {
    .hero-logo-text {
      width: min(120px, 32vw);
      margin-bottom: 1.5vh;
    }
  }

  /* iPhone SE y pantallas muy peque√±as */
  @media (max-width: 375px) {
    .hero-logo-text {
      width: min(110px, 30vw);
      margin-bottom: 1.5vh;
    }
  }
</style>
