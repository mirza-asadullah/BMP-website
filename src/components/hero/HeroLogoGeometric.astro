<div class="hero-logo-geometric">
  <img src="/images/logos/Logo-bmp.svg" alt="BeMind Power Logo" />
</div>

<style>
  .hero-logo-geometric {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: clamp(480px, 43vw, 650px);
    z-index: 10;
    pointer-events: none;
    opacity: 0.85;
  }

  @media (min-width: 1440px) {
    .hero-logo-geometric {
      width: clamp(540px, 45vw, 720px);
    }
  }

  @media (min-width: 1920px) {
    .hero-logo-geometric {
      width: clamp(600px, 47vw, 800px);
    }
  }

  .hero-logo-geometric img {
    width: 100%;
    height: auto;
  }

  @media (max-width: 1024px) {
    .hero-logo-geometric {
      width: min(450px, 45vw);
      top: 48%;
    }
  }

  @media (max-width: 768px) {
    .hero-logo-geometric {
      width: min(280px, 45vw);
      top: 50%;
      opacity: 0.7;
    }
  }

  @media (max-width: 480px) {
    .hero-logo-geometric {
      width: min(200px, 50vw);
      top: 48%;
      opacity: 0.6;
    }
  }

  /* iPhone SE y pantallas muy peque√±as */
  @media (max-width: 375px) {
    .hero-logo-geometric {
      width: min(180px, 48vw);
      top: 46%;
      opacity: 0.5;
    }
  }
</style>
