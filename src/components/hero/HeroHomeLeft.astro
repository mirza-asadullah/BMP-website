---
interface Props {
  titleLine1?: string;
  titleLine2?: string;
  subtitle?: string;
  ctaText?: string;
  ctaHref?: string;
  titleLine1Key?: string;
  titleLine2Key?: string;
  subtitleKey?: string;
  ctaKey?: string;
}

const {
  titleLine1 = "Todo empieza",
  titleLine2 = "con una conversación",
  subtitle = "Y desde ahí: paga, vende, sana o escucha música. Sin salir del chat.",
  ctaText = "Ver Más",
  ctaHref = "/app",
  titleLine1Key = "home.hero.titleLine1",
  titleLine2Key = "home.hero.titleLine2",
  subtitleKey = "home.hero.subtitle",
  ctaKey = "home.hero.cta",
} = Astro.props;
---
<!-- Componente único izquierdo según Figma: títulos arriba, Ver más, botones de descarga debajo uno del otro -->
<aside class="hero-home-left" aria-label="Presentación BeMind Power">
  <div class="hero-home-left-content">
    <h1 class="hero-home-title">
      <span id="hero-title-line1" class="hero-home-title-line1" data-i18n={titleLine1Key}>{titleLine1}</span>
      <span id="hero-title-line2" class="hero-home-title-line2" data-i18n={titleLine2Key}>{titleLine2}</span>
    </h1>
    <p id="hero-subtitle" class="hero-home-subtitle" data-i18n={subtitleKey}>{subtitle}</p>
    <a id="hero-cta-button" href={ctaHref} class="hero-home-cta" data-i18n={ctaKey}>{ctaText}</a>
    <div class="hero-home-badges">
      <a href="#" class="store-btn" aria-label="Download on the App Store">
        <img src="/images/app-store-badge.svg" alt="Download on the App Store" />
      </a>
      <a href="https://play.google.com/store/apps/details?id=chat.bemindepower.bmpchat&hl=es_US" class="store-btn" aria-label="Get it on Google Play">
        <img src="/images/google-play-badge.svg" alt="Get it on Google Play" />
      </a>
    </div>
  </div>
</aside>

<style>
  .hero-home-left {
    flex: 1 1 auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    text-align: left;
    max-width: 650px;
    min-height: 0;
    padding-bottom: 0;
  }

  .hero-home-left-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0;
    width: 100%;
  }

  .hero-home-title {
    color: #fff;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }

  .hero-home-title-line1 {
    font-family: 'OPTIFutura-ExtraBlackCond', 'Inter', sans-serif;
    font-size: clamp(32px, 4.5vw, 80px);
    font-weight: 900;
    letter-spacing: 0.01em;
  }

  .hero-home-title-line2 {
    font-family: 'Neometric', 'Inter', sans-serif;
    font-size: clamp(20px, 2.4vw, 40px);
    font-weight: 700;
    letter-spacing: 0.01em;
  }

  .hero-home-subtitle {
    color: #fff;
    font-family: 'Neometric', 'Inter', sans-serif;
    font-size: clamp(16px, 1.5vw, 26px);
    font-weight: 400;
    line-height: 1.5;
    margin: 0 0 6rem 0;
    max-width: 512px;
  }

  .hero-home-cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-height: 64px;
    padding: 0 2rem;
    width: min(262px, 18vw);
    background: #1929ff;
    color: #fff;
    font-family: 'Inter', sans-serif;
    font-weight: 300;
    font-size: clamp(14px, 1.15vw, 20px);
    letter-spacing: 0.02em;
    border-radius: 999px;
    text-decoration: none;
    margin: 0 0 1rem 0;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .hero-home-cta:hover {
    transform: scale(1.02);
    box-shadow: 0 4px 24px rgba(25, 41, 255, 0.5);
  }

  /* Botones de descarga: debajo uno del otro, tamaños mejorados para visibilidad y tap */
  .hero-home-badges {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 12px;
  }

  .hero-home-badges .store-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: min(262px, 18vw);
    height: 64px;
    padding: 0 20px;
    background: rgba(0, 0, 0, 0.85);
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 50px;
    box-shadow: 2.11px 2.11px 8.43px 0px #371BBE, -2.11px -2.11px 8.43px 0px #1929FF;
    text-decoration: none;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .hero-home-badges .store-btn:hover {
    transform: scale(1.02);
    box-shadow: 0 6px 20px rgba(55, 27, 190, 0.35);
  }

  .hero-home-badges .store-btn img {
    height: 42px;
    width: auto;
    max-width: 100%;
    object-fit: contain;
  }

  @media (min-width: 769px) {
    .hero-home-badges .store-btn {
      width: min(262px, 18vw);
      height: 64px;
      padding: 0 24px;
    }

    .hero-home-badges .store-btn img {
      height: 48px;
    }
  }

  /* Tablet: ajustes de tamaño */
  @media (max-width: 1024px) {

    .hero-home-title-line1 {
      font-size: clamp(28px, 5vw, 48px);
    }

    .hero-home-title-line2 {
      font-size: clamp(20px, 2.5vw, 36px);
    }

    .hero-home-subtitle {
      font-size: clamp(14px, 1.3vw, 22px);
    }

    .hero-home-cta {
      min-height: 56px;
      width: min(240px, 70vw);
      font-size: clamp(13px, 1.1vw, 18px);
    }
  }

  /* Móvil: espaciado y tamaños */
  @media (max-width: 768px) {

    .hero-home-title-line1 {
      font-size: clamp(26px, 7vw, 40px);
    }

    .hero-home-title-line2 {
      font-size: clamp(18px, 4.5vw, 32px);
    }

    .hero-home-subtitle {
      font-size: clamp(14px, 3.8vw, 20px);
      max-width: 100%;
    }

    .hero-home-cta {
      min-height: 44px;
      width: 200px !important;
      max-width: 200px !important;
      font-size: 15px;
      font-weight: 400;
    }

    .hero-home-badges .store-btn {
      width: 200px;
      height: 44px;
    }
  }

  @media (max-width: 480px) {

    .hero-home-title-line1 {
      font-family: 'OPTIFuturaDemiBold', 'Inter', sans-serif;
      font-size: 24px;
      font-weight: 700;
      line-height: 38px;
      letter-spacing: 0.01em;
      text-align: center;
    }

    .hero-home-title-line2 {
      font-family: 'Neometric', 'Inter', sans-serif;
      font-weight: 600;
      font-size: 16px;
      line-height: 32.09px;
      letter-spacing: 0.01em;
      text-align: center;
    }

    .hero-home-subtitle {
      font-family: 'Neometric', 'Inter', sans-serif;
      font-weight: 600;
      font-size: 14px;
      line-height: 100%;
      letter-spacing: 0;
      text-align: center;
      max-width: 90%;
      margin: 0 auto;
    }

    .hero-home-cta {
      min-height: 42px;
      width: 200px !important;
      max-width: 200px !important;
      font-size: 14px;
      padding: 0 1.5rem;
      font-weight: 400;
    }
  

    .hero-home-badges {
      gap: 10px;
    }

    .hero-home-badges .store-btn {
      width: 200px;
      height: 42px;
      padding: 0 16px;
      min-height: 42px;
    }

    .hero-home-badges .store-btn img {
      height: 26px;
    }
  }

  /* Button width equality fix for small screens (< 380px) */
  @media (max-width: 380px) {
    .hero-home-cta,
    .hero-home-badges .store-btn {
      width: 200px !important;
      max-width: 200px !important;
      min-width: 200px !important;
      box-sizing: border-box !important;
      padding-left: 16px !important;
      padding-right: 16px !important;
    }

    .hero-home-badges .store-btn img {
      height: 30px !important;
    }
  }
</style>
