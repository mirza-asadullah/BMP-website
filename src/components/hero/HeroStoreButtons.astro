---
// App Store / Google Play + Ver Más button
interface Props {
  appStoreUrl?: string;
  googlePlayUrl?: string;
  ctaUrl?: string;
  ctaText?: string;
}

const { 
  appStoreUrl = "#", 
  googlePlayUrl = "https://play.google.com/store/apps/details?id=chat.bemindepower.bmpchat&hl=es_US",
  ctaUrl = "/app",
  ctaText = "Ver Más"
} = Astro.props;
---

<div class="hero-store-buttons">
  <a href={appStoreUrl} class="store-btn" aria-label="Download on App Store">
    <img src="/images/app-store-badge.svg" alt="Download on App Store" />
  </a>
  <a href={googlePlayUrl} class="store-btn" aria-label="Get it on Google Play">
    <img src="/images/google-play-badge.svg" alt="Get it on Google Play" />
  </a>
  <a id="hero-cta-button" href={ctaUrl} class="ver-mas-btn">{ctaText}</a>
</div>

<style>
  .hero-store-buttons {
    display: flex;
    gap: clamp(18px, 2vw, 28px);
    position: relative;
    z-index: 18;
  }

  .store-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: clamp(160px, 15vw, 200px);
    height: clamp(48px, 5vh, 60px);
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 50px;
    box-shadow: 
      0 0 25px 0px rgba(59, 130, 246, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    overflow: hidden;
    text-decoration: none;
  }

  .store-btn:hover {
    transform: scale(1.03);
    box-shadow: 
      0 0 35px 0px rgba(59, 130, 246, 0.6),
      inset 0 1px 0 rgba(255, 255, 255, 0.15);
  }

  .store-btn img {
    height: clamp(36px, 4.2vh, 46px);
    width: auto;
    object-fit: contain;
    margin-left: 5px; /* Visual correction to center content */
  }

  .ver-mas-btn {
    display: none; /* Hidden by default (desktop) */
  }

  @media (max-width: 768px) {
    .ver-mas-btn {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 100%;
      height: 38px;
      background: #1929ff;
      color: #fff;
      font-family: 'Inter', sans-serif;
      font-weight: 300;
      font-size: 14px;
      letter-spacing: 0.02em;
      border-radius: 387.19px;
      text-decoration: none;
      transition: transform 0.2s, box-shadow 0.2s;
      border: none;
    }

    .ver-mas-btn:hover {
      transform: scale(1.02);
      box-shadow: 0 4px 20px rgba(25, 41, 255, 0.5);
    }
  }

  @media (min-width: 1440px) {
    .hero-store-buttons {
      gap: clamp(22px, 2.2vw, 32px);
    }

    .store-btn {
      width: clamp(180px, 16vw, 220px);
      height: clamp(54px, 5.5vh, 64px);
    }

    .store-btn img {
      height: clamp(40px, 4.5vh, 50px);
    }
  }

  @media (min-width: 1920px) {
    .hero-store-buttons {
      gap: clamp(26px, 2.4vw, 36px);
    }

    .store-btn {
      width: clamp(200px, 17vw, 240px);
      height: clamp(58px, 6vh, 68px);
    }

    .store-btn img {
      height: clamp(44px, 5vh, 54px);
    }
  }

  @media (max-width: 1024px) {
    .store-btn {
      width: 160px;
      height: 48px;
    }

    .store-btn img {
      height: 36px;
    }
  }

  @media (max-width: 768px) {
    .hero-store-buttons {
      flex-direction: column;
      gap: 10px;
      margin-top: 0;
      width: 62vw;
      align-items: stretch;
    }

    .store-btn {
      width: 100%;
      height: 38px;
      border-radius: 387.19px;
      background: rgba(0, 0, 0, 0.85);
      border: none;
      box-shadow: 
        2.11px 2.11px 8.43px 0px #371BBE,
        -2.11px -2.11px 8.43px 0px #1929FF;
    }

    .store-btn img {
      height: 26px;
    }
  }

  @media (max-width: 480px) {
    .hero-store-buttons {
      gap: 10px;
      margin-top: 0;
      width: 60vw;
    }

    .store-btn {
      width: 100%;
      height: 30px;
    }

    .store-btn img {
      height: 25px;
    }

    .ver-mas-btn {
      height: 30px;
      font-size: 13px;
    }
  }

  /* iPhone SE y pantallas muy pequeñas */
  @media (max-width: 380px) {
    .hero-store-buttons {
      gap: 8px;
      margin-top: 0;
      width: 55vw;
    }

    .store-btn {
      width: 200px;
      height: 30px;
    }

    .store-btn img {
      height: 30px;
    }

    .ver-mas-btn {
      width: 200px;
      height: 30px;
      font-size: 12px;
    }
  }
</style>
