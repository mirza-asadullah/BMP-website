---
interface Props {
  image: string;
  logo: string;
  title: string;
  description: string;
  titleKey?: string;
  descriptionKey?: string;
  link?: string;
}

const { image, logo, title, description, titleKey, descriptionKey, link } = Astro.props;
---

<div class="feature-card group relative flex flex-col overflow-visible cursor-pointer transition-all duration-500 hover:scale-105">
  <div class="card-image-container">
    <img 
      src={image} 
      alt={title}
      class="card-image"
    />
  </div>

  <div class="card-top relative rounded-t-[10px] h-[120px] sm:h-[200px]">
  </div>

  <div class="vignettes-container relative h-0">
    <img src="/images/vignette-left.svg" alt="" class="card-vignette card-vignette-left" aria-hidden="true" />
    <img src="/images/vignette-right.svg" alt="" class="card-vignette card-vignette-right" aria-hidden="true" />
  </div>

  <div class="card-bottom relative rounded-b-[10px] px-3 pt-3 pb-3 sm:px-4 sm:pt-4 sm:pb-4 overflow-hidden">
         <div class="flex justify-end logo-container">
          <img 
        src={logo} 
        alt="Logo"
        class="card-logo"
      />
         </div>
    <div class="title-row">
      <div class="card-title text-white">
        <span data-i18n={titleKey}>{title}</span>
      </div>

    </div>

    <p class="card-description text-white">
      <span data-i18n={descriptionKey}>{description}</span>
    </p>
  </div>

  <!-- Efecto de brillo en hover -->
  <div class="absolute inset-0 rounded-[10px] opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none glow-effect"></div>
  
  {/* Astro.props.link && <a href={Astro.props.link} class="absolute inset-0 z-20" aria-label={title}></a> */}
</div>

<style>
  .feature-card {
    perspective: 1000px;
    padding-top: 28px;
    width: 160px;
  }

  @media (max-width: 380px) {
    .feature-card {
      width: 130px;
      padding-top: 22px;
    }
  }

  @media (min-width: 381px) and (max-width: 479px) {
    .feature-card {
      width: 140px;
      padding-top: 24px;
    }
  }

  @media (min-width: 640px) {
    .feature-card {
      width: 240px;
      padding-top: 44px;
    }
  }

  /* CONTENEDOR DE IMAGEN (sobresale ligeramente hacia arriba) */
  .card-image-container {
    position: absolute;
    top: 28px;
    left: 50%;
    transform: translateX(-50%);
    width: 95%;
    z-index: 5;
    display: flex;
    justify-content: center;
    align-items: flex-end;
    height: 120px;
  }

  @media (max-width: 380px) {
    .card-image-container {
      top: 22px;
    }
  }

  @media (min-width: 381px) and (max-width: 479px) {
    .card-image-container {
      top: 24px;
    }
  }

  @media (min-width: 640px) {
    .card-image-container {
      top: 44px;
      width: 100%;
      height: 200px;
    }
  }

  .card-image {
    width: 100%;
    height: auto;
    max-height: 140px;
    object-fit: contain;
    object-position: center bottom;
  }

  @media (min-width: 640px) {
    .card-image {
      max-height: 220px;
    }
  }

  /* PARTE SUPERIOR */
  .card-top {
    background: rgba(134, 20, 190, 0.5);
    border: 1px solid rgba(82, 25, 191, 0.5);
    border-bottom: none;
    overflow: hidden;
  }

  /* PARTE INFERIOR */
  .card-bottom {
    background: rgba(108, 23, 191, 0.5);
    border: 1px solid rgba(82, 25, 191, 0.5);
    border-top: none;
    margin-top: 2px;
  }

  @media (min-width: 640px) {
    .card-bottom {
      margin-top: 6px;
    }
  }

  /* Fila de título y logo - distribuidos en extremos */
  .title-row {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    margin-bottom: 4px;
    gap: 8px;
  }

  @media (min-width: 640px) {
    .title-row {
      justify-content: space-between;
    }
  }

  .card-title {
    font-family: 'Neometric', 'Inter', sans-serif;
    font-weight: 400;
    text-transform: capitalize;
    font-size: 15px;
    line-height: 1.1;
    flex-shrink: 1;
    min-width: 0;
  }

  @media (min-width: 640px) {
    .card-title {
      font-size: 15px;
    }
  }

  .logo-container {
    display: flex;
  }

  .card-logo {
    height: 10px;
    width: auto;
    opacity: 0.9;
    flex-shrink: 0;
  }

  @media (min-width: 640px) {
    .card-logo {
      height: 20px;
    }
  }

  .card-description {
    font-family: 'Inter', sans-serif;
    font-weight: 300;
    font-size: 8px;
    line-height: 1.3;
    max-width: 80%;
    opacity: 0;
    padding-bottom: 10px;
    display: none;
  }

  @media (min-width: 640px) {
    .card-description {
      font-size: 10px;
      line-height: 1.4;
      opacity: 1;
      display: block;
    }
  }

  .feature-card:hover {
    filter: drop-shadow(0 25px 50px rgba(139, 92, 246, 0.3));
  }

  .glow-effect {
    background: linear-gradient(to top, rgba(139, 92, 246, 0.15), transparent);
  }

  /* Contenedor de viñetas */
  .vignettes-container {
    position: relative;
    z-index: 20;
  }

  /* Viñetas decorativas */
  .card-vignette {
    position: absolute;
    pointer-events: none;
  }

  .card-vignette-left {
    left: 6px;
    top: 50%;
    transform: translateY(-50%);
    width: 14px;
    height: 30px;
  }

  .card-vignette-right {
    right: -10px;
    top: 50%;
    transform: translateY(-50%);
    width: auto;
    height: 60px;
  }

  @media (min-width: 640px) {
    .card-vignette-right {
      right: -18px;
      height: 100px;
    }
  }

  /* Hide decorative vignettes on small/mobile screens to avoid visual artifacts */
  @media (max-width: 639px) {
.card-vignette-left {
    left: 6px;
    top: 50%;
    transform: translateY(-50%);
    width: 8px;
    height: 20px;
  }

  .card-vignette-right {
    right: -8px;
    top: 50%;
    transform: translateY(-50%);
    width: auto;
    height: 45px;
  }

  }
</style>
