---
// Página home: hero compuesto por componentes pequeños e inspeccionables por separado.
import HomeHeroBackground from './HomeHeroBackground.astro';
import HomeHeroSliderLayer from './HomeHeroSliderLayer.astro';
import HomeHeroOverlay from './HomeHeroOverlay.astro';

interface Props {
  videoSrc?: string;
  phoneSrc?: string;
  titleLine1?: string;
  titleLine2?: string;
  subtitle?: string;
  ctaText?: string;
  ctaHref?: string;
  titleLine1Key?: string;
  titleLine2Key?: string;
  subtitleKey?: string;
  ctaKey?: string;
  autoplayVideo?: boolean;
}

const { videoSrc, phoneSrc, titleLine1, titleLine2, subtitle, ctaText, ctaHref, titleLine1Key, titleLine2Key, subtitleKey, ctaKey, autoplayVideo = false } = Astro.props;
---

<div class="home-hero">
  <HomeHeroBackground videoSrc={videoSrc} autoplayVideo={autoplayVideo} />
  <HomeHeroSliderLayer>
    <slot />
  </HomeHeroSliderLayer>
  <HomeHeroOverlay phoneSrc={phoneSrc} titleLine1={titleLine1} titleLine2={titleLine2} subtitle={subtitle} ctaText={ctaText} ctaHref={ctaHref} titleLine1Key={titleLine1Key} titleLine2Key={titleLine2Key} subtitleKey={subtitleKey} ctaKey={ctaKey} />
</div>

<style>
  .home-hero {
    position: relative;
    width: 100%;
    height: 100vh;
    min-height: 100dvh;
    overflow: hidden;
  }
</style>
