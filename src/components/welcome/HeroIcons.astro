---
// Iconos decorativos
import HeroIcon from './HeroIcon.astro';
---

<div class="hero-icons">
  <HeroIcon src="/common/icono2.png" position="left-top" blur={16} />
  <HeroIcon src="/common/icono2.png" position="right-top" blur={16} />
  <HeroIcon src="/common/icono5.png" position="right-mid" />
