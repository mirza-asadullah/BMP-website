---
// Página Finance: contenido específico de Finance con hero slider.
import Layout from "../layouts/Layout.astro";
import Header from "../components/common/Header.astro";
import HomeHero from "../components/home/HomeHero.astro";
import FeatureSlider from "../components/sliders/FeatureSlider.astro";
---

<Layout
  title="BeMind Power - Finance"
  description="BeMind Power: finanzas y bienestar con tecnología inmersiva."
  bodyClass="finance-page"
>
  <div class="finance-page-wrap relative min-h-[100dvh] w-full">
    <Header
      currentPath="/finance"
      pageTitle="Finanzas inteligentes"
      pageTitleKey="finance.hero.titleLine1"
    />

    <!-- Layout Desktop: usa HomeHero con video y phone de Finance, slider inicia en Finance (index 8) -->
    <div class="finance-desktop-layout">
      <HomeHero
        videoSrc="/vedioes/an9.mp4"
        phoneSrc="/sliderImages/s9.png"
        titleLine1="A.I. Finanzas"
        titleLine2="Tu asesor personal"
        subtitle="Gestión financiera inteligente y personalizada."
        ctaText="Ver Más"
        ctaHref="/detailsPages/financedetails"
        titleLine1Key="finance.hero.titleLine1"
        titleLine2Key="finance.hero.titleLine2"
        subtitleKey="finance.hero.subtitle"
        ctaKey="finance.hero.cta"
      >
        <FeatureSlider initialIndex={8} />
      </HomeHero>
    </div>

    <!-- Layout Mobile: estructura separada para mejor control -->
    <div class="finance-mobile-layout">
      <!-- Video de fondo -->
      <div class="finance-mobile-bg">
        <video
          id="home-hero-video"
          class="finance-mobile-video"
          autoplay
          muted
          loop
          playsinline
          preload="auto"
        >
          <source src="/vedioes/an9.mp4" type="video/mp4" />
        </video>
        <div class="finance-mobile-overlay"></div>
        <div class="finance-mobile-glow"></div>
      </div>

      <!-- Slider arriba, inicia en Finance (index 8) -->
      <div class="finance-mobile-slider" id="slider">
        <FeatureSlider initialIndex={8} />
      </div>

      <!-- Contenido inferior: título + botones -->
      <div class="finance-mobile-content">
        <div class="finance-mobile-text">
          <h1 class="finance-m-title">
            <span
              id="hero-title-line1"
              class="finance-m-title-line1"
              data-i18n="finance.hero.titleLine1">A.I. Finanzas</span
            >
            <span
              id="hero-title-line2"
              class="finance-m-title-line2"
              data-i18n="finance.hero.titleLine2">Tu asesor personal</span
            >
          </h1>
          <p
            id="hero-subtitle"
            class="finance-m-subtitle"
            data-i18n="finance.hero.subtitle"
          >
            Gestión financiera inteligente y personalizada.
          </p>
        </div>

        <div class="finance-mobile-buttons">
          <a
            id="hero-cta-button"
            href="/detailsPages/financedetails"
            class="finance-m-cta"
            data-i18n="finance.hero.cta">Ver Más</a
          >
          <div class="finance-m-badges">
            <a
              href="#"
              class="finance-m-store-btn"
              aria-label="Download on the App Store"
            >
              <img
                src="/detailPageImages/app-store-badge.svg"
                alt="Download on the App Store"
              />
            </a>
            <a
              href="#"
              class="finance-m-store-btn"
              aria-label="Get it on Google Play"
            >
              <img
                src="/detailPageImages/google-play-badge.svg"
                alt="Get it on Google Play"
              />
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style is:global>
  body.finance-page {
    background: #000000;
    overflow-x: hidden;
  }

  .finance-desktop-layout {
    display: block;
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .finance-mobile-layout {
    display: none;
  }

  /* ===== MOBILE + TABLETS TÁCTILES ===== */
  @media (max-width: 768px),
    (hover: none) and (pointer: coarse) and (min-width: 769px) and (max-width: 1366px) {
    body.finance-page {
      overflow-x: hidden;
      overscroll-behavior: none;
    }

    .finance-desktop-layout {
      display: none;
    }

    /* Layout principal: flex column que ocupa el viewport completo */
    .finance-mobile-layout {
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      position: relative;
      width: 100%;
      height: 100dvh;
      height: 100vh;
      overflow: clip;
      box-sizing: border-box;
      padding-top: calc(70px + env(safe-area-inset-top));
      padding-bottom: max(1.5rem, env(safe-area-inset-bottom));
    }

    /* Full screen background color */
    .finance-mobile-layout::before {
      content: "";
      position: fixed;
      inset: 0;
      background: #0b0245;
      z-index: -1;
    }

    /* Video de fondo - solo en area media */
    .finance-mobile-bg {
      position: absolute;
      top: calc(70px + env(safe-area-inset-top));
      left: 0;
      right: 0;
      height: clamp(280px, 45vh, 400px);
      z-index: 0;
      overflow: hidden;
    }

    .finance-mobile-video {
      position: absolute;
      top: 50%;
      left: 50%;
      width: 100%;
      height: 100%;
      transform: translate(-50%, -50%);
      object-fit: cover;
      object-position: center top;
      opacity: 0.9;
    }

    .finance-mobile-overlay {
      position: absolute;
      inset: 0;
      background: linear-gradient(
        to bottom,
        rgba(11, 2, 69, 0.2) 0%,
        rgba(11, 2, 69, 0.6) 80%,
        rgba(11, 2, 69, 1) 100%
      );
      z-index: 1;
    }

    .finance-mobile-glow {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 80vw;
      height: 80vw;
      background: radial-gradient(
        circle,
        rgba(40, 54, 233, 0.7) 0%,
        rgba(40, 54, 233, 0.4) 40%,
        transparent 70%
      );
      filter: blur(150px);
      z-index: 2;
    }

    /* CONTENIDO INFERIOR (textos + botones) — parte inferior */
    .finance-mobile-content {
      position: relative;
      z-index: 10;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      flex: 0 0 auto;
      min-height: 0;
      padding: 0 5%;
      gap: clamp(0.8rem, 1.5vh, 1rem);
    }

    /* Título */
    .finance-mobile-text {
      text-align: center;
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .finance-m-title {
      color: #fff;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 0;
      margin: 0 0 clamp(0.3rem, 1vh, 0.6rem) 0;
      line-height: 1.1;
      width: 100%;
    }

    .finance-m-title-line1 {
      font-family: "OPTIFutura-ExtraBlackCond", "Inter", sans-serif;
      font-size: clamp(24px, 7vw, 40px);
      font-weight: 900;
      letter-spacing: 0.01em;
    }

    .finance-m-title-line2 {
      font-family: "OPTIFutura-ExtraBlackCond", "Inter", sans-serif;
      font-size: clamp(24px, 7vw, 40px);
      font-weight: 900;
      letter-spacing: 0.01em;
    }

    .finance-m-title-line3 {
      font-family: "Neometric", "Inter", sans-serif;
      font-size: clamp(14px, 4vw, 24px);
      font-weight: 700;
      letter-spacing: 0.01em;
    }

    .finance-m-subtitle {
      color: #fff;
      font-family: "Neometric", "Inter", sans-serif;
      font-size: clamp(11px, 2.8vw, 14px);
      font-weight: 400;
      line-height: 1.3;
      margin: 0;
      max-width: 92%;
      margin-left: auto;
      margin-right: auto;
      text-align: center;
    }

    /* Botones */
    .finance-mobile-buttons {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-top: clamp(0.4rem, 1.5vh, 1rem);
      gap: clamp(0.3rem, 0.8vh, 0.5rem);
      width: 100%;
    }

    .finance-m-cta {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      height: clamp(42px, 5.5vh, 50px);
      padding: 0 2rem;
      width: min(260px, 68vw);
      background: #1929ff;
      color: #fff;
      font-family: "OPTIFutura-ExtraBlackCond", "Inter", sans-serif;
      font-weight: 900;
      font-size: clamp(14px, 3.8vw, 16px);
      letter-spacing: 0.02em;
      border-radius: 999px;
      text-decoration: none;
      transition:
        transform 0.2s,
        box-shadow 0.2s;
    }

    .finance-m-cta:hover,
    .finance-m-cta:active {
      transform: scale(1.02);
      box-shadow: 0 4px 24px rgba(25, 41, 255, 0.5);
    }

    .finance-m-badges {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: clamp(0.3rem, 0.6vh, 0.5rem);
    }

    .finance-m-store-btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: min(260px, 68vw);
      height: clamp(42px, 5.5vh, 50px);
      padding: 0 18px;
      background: rgba(0, 0, 0, 0.85);
      border: 1px solid rgba(255, 255, 255, 0.12);
      border-radius: 50px;
      box-shadow:
        0 4px 14px rgba(55, 27, 190, 0.25),
        0 -4px 14px rgba(25, 41, 255, 0.2);
      text-decoration: none;
      transition:
        transform 0.2s,
        box-shadow 0.2s;
    }

    .finance-m-store-btn:hover,
    .finance-m-store-btn:active {
      transform: scale(1.02);
      box-shadow: 0 6px 20px rgba(55, 27, 190, 0.35);
    }

    .finance-m-store-btn img {
      height: clamp(24px, 3.8vh, 32px);
      width: auto;
      max-width: 100%;
      object-fit: contain;
    }

    /* SLIDER — encima del contenido */
    .finance-mobile-slider {
      position: relative;
      z-index: 5;
      width: 100%;
      flex: 0 0 auto;
      min-height: 180px;
      height: clamp(180px, 32vh, 280px);
      padding-top: 0;
      margin-bottom: clamp(0.5rem, 1.5vh, 1rem);
      display: flex;
      align-items: center;
      justify-content: center;
      padding-left: 2%;
      padding-right: 2%;
      overflow: visible;
    }

    .finance-mobile-slider .feature-slider {
      width: 100%;
      height: 100%;
      overflow: visible;
    }

    .finance-mobile-slider .slider-container {
      height: 100%;
      overflow: visible;
    }

    .finance-mobile-slider .slider-wrapper {
      padding: 0;
      height: 100%;
      overflow: visible;
    }

    .finance-mobile-slider .slider-track {
      overflow: visible;
    }

    /* Ocultar flechas de navegación en móvil */
    .finance-mobile-slider .slider-nav {
      display: none;
    }
  }

  /* ===== TABLETS TÁCTILES (iPad, etc.) ===== */
  @media (hover: none) and (pointer: coarse) and (min-width: 769px) and (max-width: 1366px) {
    .finance-mobile-layout {
      padding-top: calc(90px + env(safe-area-inset-top));
    }

    .finance-mobile-text {
      max-width: 720px;
    }

    .finance-m-cta {
      width: min(520px, 60vw);
    }

    .finance-m-store-btn {
      width: min(520px, 60vw);
    }

    .finance-mobile-slider {
      min-height: 300px;
    }
  }

  /* ===== TABLETS PEQUEÑAS / MÓVILES GRANDES (601-768px) ===== */
  @media (max-width: 768px) and (min-width: 601px) {
    .finance-mobile-layout {
      padding-top: calc(80px + env(safe-area-inset-top));
    }

    .finance-m-title-line1 {
      font-size: clamp(34px, 5.5vw, 44px);
    }

    .finance-m-title-line2 {
      font-size: clamp(34px, 5.5vw, 44px);
    }

    .finance-m-title-line3 {
      font-size: clamp(17px, 3vw, 24px);
    }

    .finance-m-subtitle {
      font-size: clamp(13px, 2vw, 16px);
    }

    .finance-m-cta {
      width: min(300px, 55vw);
      height: 52px;
      font-size: 16px;
    }

    .finance-m-store-btn {
      width: min(280px, 52vw);
      height: 52px;
    }

    .finance-m-store-btn img {
      height: 32px;
    }
  }

  /* ===== MÓVILES PEQUEÑOS (<=380px) - iPhone SE ===== */
  @media (max-width: 380px) {
    .finance-mobile-layout {
      padding-top: calc(62px + env(safe-area-inset-top));
    }

    .finance-mobile-content {
      padding-left: 4%;
      padding-right: 4%;
    }

    .finance-m-title-line1 {
      font-family: "OPTIFuturaDemiBold", "Inter", sans-serif;
      font-size: 24px;
      font-weight: 700;
      line-height: 38px;
      letter-spacing: 0.01em;
      text-align: center;
    }

    .finance-m-title-line2 {
      font-family: "Neometric", "Inter", sans-serif;
      font-weight: 600;
      font-size: 16px;
      line-height: 32.09px;
      letter-spacing: 0.01em;
      text-align: center;
    }

    .finance-m-title-line3 {
      font-size: clamp(12px, 3.5vw, 16px);
    }

    .finance-m-subtitle {
      font-family: "Neometric", "Inter", sans-serif;
      font-weight: 600;
      font-size: 14px;
      line-height: 100%;
      letter-spacing: 0;
      text-align: center;
      max-width: 90%;
      margin: 0 auto;
    }

    .finance-m-cta {
      width: 200px;
      height: 44px;
      font-size: 14px;
      padding: 0 1.5rem;
    }

    .finance-m-store-btn {
      width: 200px;
      height: 44px;
      padding: 0 14px;
    }

    .finance-m-store-btn img {
      height: 30px;
    }

    .finance-mobile-slider {
      min-height: 180px;
    }
  }

  /* ===== PANTALLAS MUY CORTAS ===== */
  @media (max-width: 768px) and (max-height: 650px) {
    .finance-mobile-layout {
      padding-top: calc(60px + env(safe-area-inset-top));
    }

    .finance-m-title-line1 {
      font-size: clamp(22px, 6.5vw, 30px);
    }

    .finance-m-title-line2 {
      font-size: clamp(22px, 6.5vw, 30px);
    }

    .finance-m-title-line3 {
      font-size: clamp(12px, 3.2vw, 17px);
    }

    .finance-m-subtitle {
      font-size: 11px;
    }

    .finance-m-cta {
      height: 40px;
      font-size: 13px;
    }

    .finance-m-store-btn {
      height: 40px;
    }

    .finance-m-store-btn img {
      height: 22px;
    }

    .finance-mobile-slider {
      min-height: 160px;
    }
  }

  /* /finance móvil: centrar botón de asistencia verticalmente */
  @media (max-width: 640px) {
    body.finance-page .support-container {
      top: 50%;
      bottom: auto;
      left: max(16px, calc(env(safe-area-inset-left) + 16px));
      transform: translateY(-50%);
    }

    body.finance-page .support-tooltip {
      position: relative;
    }
  }

  /* ===== LANDSCAPE ===== */
  @media (max-width: 768px) and (max-height: 500px) and (orientation: landscape) {
    .finance-mobile-layout {
      flex-direction: row;
      flex-wrap: wrap;
    }

    .finance-mobile-content {
      flex: 1;
      min-width: 50%;
      padding: 60px 2% 0.4rem 2%;
      gap: 0.25rem;
    }

    .finance-mobile-text {
      padding: 0;
    }

    .finance-m-title {
      margin-bottom: 0.3rem;
    }

    .finance-m-title-line1 {
      font-size: clamp(18px, 4.5vw, 26px);
    }

    .finance-m-title-line2 {
      font-size: clamp(18px, 4.5vw, 26px);
    }

    .finance-m-title-line3 {
      font-size: clamp(10px, 2.3vw, 16px);
    }

    .finance-m-subtitle {
      font-size: 10px;
    }

    .finance-mobile-buttons {
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
      gap: 0.3rem;
    }

    .finance-m-badges {
      flex-direction: row;
      gap: 0.3rem;
    }

    .finance-m-cta {
      height: 36px;
      width: auto;
      min-width: 130px;
      font-size: 11px;
    }

    .finance-m-store-btn {
      height: 36px;
      width: auto;
      min-width: 125px;
    }

    .finance-m-store-btn img {
      height: 18px;
    }

    .finance-mobile-slider {
      width: 100%;
      min-height: 160px;
      max-height: 220px;
    }
  }
</style>

<script>
  // Optimizar reproducción de video en mobile
  function initFinanceMobileVideo(): void {
    const video = document.querySelector(
      ".finance-mobile-video",
    ) as HTMLVideoElement;
    if (!video) return;

    const playVideo = () => {
      video.play().catch(() => {
        document.addEventListener(
          "touchstart",
          () => {
            video.play();
          },
          { once: true },
        );
      });
    };

    if (video.readyState >= 2) {
      playVideo();
    } else {
      video.addEventListener("loadeddata", playVideo, { once: true });
    }
  }

  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initFinanceMobileVideo);
  } else {
    initFinanceMobileVideo();
  }
</script>
