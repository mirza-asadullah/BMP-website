---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";

// Images
const bannerImg = "/images/chat/banner.png";
const mobileBannerImg = "/images/mobileview.png";
const phoneImg = "/images/chat/smartphonehome.png";

const heartIcon = "/images/heartLogo.png";
const dollarIcon = "/images/doller.png";
---

<Layout
  title="BeMind Power - Chat Details"
  description="Chat con superpoderes"
  bodyClass="chat-detail-page"
>
  <div
    class="chat-detail-wrap relative min-h-screen w-full overflow-x-hidden bg-[#0A0A1B]"
  >
    <Header />

    <main
      class="relative w-full md:min-h-screen md:h-auto pt-28 max-h-[750px]:pt-20 md:pt-40 px-0 md:px-8 lg:px-16 flex flex-col-reverse md:flex-row items-center justify-end md:justify-center gap-auto md:gap-20 z-10 overflow-hidden md:overflow-visible max-h-[750px]:h-auto max-h-[750px]:overflow-y-auto max-h-[750px]:pb-20"
    >
      <!-- Background Effect -->
      <div class="absolute inset-0 z-0">
        <picture>
          <source media="(max-width: 768px)" srcset={mobileBannerImg} />
          <img src={bannerImg} alt="" class="w-full h-full object-cover" />
        </picture>
      </div>

      <!-- Helper Icons (Mobile Only) -->
      <div
        class="absolute inset-x-0 bottom-0 top-0 z-20 pointer-events-none md:hidden overflow-hidden"
      >
        <!-- Heart Icon (Left) - Overlapping phone, blurred -->
        <img
          src={heartIcon}
          alt=""
          class="absolute top-[70%] max-h-[750px]:top-[65%] left-[-0px] w-20 h-auto blur-[1.9px] scale-100"
        />

        <!-- Dollar Icon (Bottom Right) - Blurred -->
        <img
          src={dollarIcon}
          alt=""
          class="absolute bottom-[-20px] right-[-20px] w-20 z-5 h-auto blur-[3px] scale-190"
        />

        <!-- Overlay for Phone & Icons -->
        <img
          src="/images/phone-overlay.png"
          alt=""
          class="absolute bottom-[-0px] left-1/2 -translate-x-1/2 w-[150%] max-w-[600px] h-auto z-10 pointer-events-none mix-blend-screen"
        />

        <!-- Mobile Buttons (Moved here for z-index visibility) -->
        <div
          class="absolute bottom-[5%] max-h-[750px]:bottom-[2%] left-0 right-0 flex flex-col items-center gap-[8px] md:hidden z-30 pointer-events-auto"
        >
          <a
            href="#"
            class="apps-store-btn w-[238px] h-[30px] !bg-black/90 !border-white/20 !backdrop-blur-xl"
            aria-label="Download on the App Store"
          >
            <img
              src="/images/app-store-badge.svg"
              alt="Download on the App Store"
              class="h-[12px]"
            />
          </a>
          <a
            href="#"
            class="apps-store-btn w-[238px] h-[30px] !bg-black/90 !border-white/20 !backdrop-blur-xl"
            aria-label="Get it on Google Play"
          >
            <img
              src="/images/google-play-badge.svg"
              alt="Get it on Google Play"
              class="h-[12px]"
            />
          </a>
        </div>
      </div>

      <!-- Left Content: Smartphone -->
      <div
        class="relative z-10 w-full flex flex-col items-center justify-end h-full md:h-auto md:justify-center mb-[-230px] max-h-[750px]:mb-[-50px] md:mb-0 transform scale-y-100 origin-bottom"
      >
        <div
          class="relative w-[130%] max-h-[750px]:w-[110%] md:w-full max-w-[500px] md:max-w-[600px]"
        >
          <img
            src={phoneImg}
            alt="App Interface"
            class="w-full h-auto drop-shadow-2xl"
          />
        </div>
      </div>

      <!-- Right Content: Text & Buttons -->
      <div
        class="relative z-10 text-white flex flex-col items-center md:items-start ml-14 md:ml-0 mt-[30px] max-h-[750px]:mt-6 md:mt-0 text-left md:text-left px-6 md:px-0 md:pr-10 lg:pr-60"
      >
        <h1
          class="mb-4 tracking-tight text-white w-full max-w-full md:max-w-full text-[28px] leading-[36px] md:text-[40px] lg:text-[64px] md:leading-[48px] lg:leading-[64px] font-bold md:font-medium"
          style="font-family: 'OPTIFutura-ExtraBlackCond', sans-serif; letter-spacing: 0;"
        >
          <span data-i18n="chat.detail.title"
            >Imagina tu chat con superpoderes</span
          >
        </h1>

        <p
          class="mb-6 max-w-full md:max-w-xl text-white text-[18px] md:text-[24px] lg:text-[32px] md:leading-[32px] lg:leading-[39px] font-normal md:font-semibold"
          style="font-family: 'Neometric', sans-serif; letter-spacing: -0.04em;"
        >
          <span data-i18n="chat.detail.subtitle"
            >No solo escribes: compartes fotos, llamas, mandas archivos y hasta
            dinero sin salir de la conversación.</span
          >
        </p>

        <ul
          class="mb-8 w-full flex flex-col items-start md:items-start pl-0 md:pl-2 text-[14px] leading-[100%] md:text-[18px] lg:text-[24px] md:leading-[100%]"
          style="font-family: 'Neometric', sans-serif; font-weight: 400; letter-spacing: 0;"
        >
          <li class="flex items-center gap-3 text-white">
            <span class="text-white text-xl md:hidden">•</span>
            <span class="text-white text-xl hidden md:inline">✔</span>
            <span data-i18n="chat.detail.feature1"
              >Chats privados y seguros</span
            >
          </li>
          <li class="flex items-center gap-3 text-white">
            <span class="text-white text-xl md:hidden">•</span>
            <span class="text-white text-xl hidden md:inline">✔</span>
            <span data-i18n="chat.detail.feature2">Pagos en el mismo chat</span>
          </li>
          <li class="flex items-center gap-3 text-white">
            <span class="text-white text-xl md:hidden">•</span>
            <span class="text-white text-xl hidden md:inline">✔</span>
            <span data-i18n="chat.detail.feature3"
              >Llamadas y videollamadas HD</span
            >
          </li>
          <li class="flex items-center gap-3 text-white">
            <span class="text-white text-xl md:hidden">•</span>
            <span class="text-white text-xl hidden md:inline">✔</span>
            <span data-i18n="chat.detail.feature4"
              >Grupos con miles de miembros</span
            >
          </li>
        </ul>

        <!-- Download Buttons (Desktop Only) -->
        <div
          class="apps-badges w-full hidden md:flex flex-col items-center md:items-center gap-6"
        >
          <a
            href="#"
            class="apps-store-btn"
            aria-label="Download on the App Store"
          >
            <img
              src="/images/app-store-badge.svg"
              alt="Download on the App Store"
            />
          </a>
          <a href="#" class="apps-store-btn" aria-label="Get it on Google Play">
            <img
              src="/images/google-play-badge.svg"
              alt="Get it on Google Play"
            />
          </a>
        </div>
      </div>
    </main>

    <!-- Back Arrow Icon -->
    <a
      href="/"
      class="hidden md:inline-flex absolute top-20 md:top-32 lg:top-[180px] left-4 md:left-10 lg:left-48 z-[1001] text-white hover:text-[#4F46E5] transition-colors p-3 border border-transparent hover:border-[#4F46E5]/50 rounded-full bg-white/10 backdrop-blur-sm hover:bg-white/20"
    >
      <svg
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M19 12H5M12 19L5 12L12 5"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
      </svg>
    </a>
  </div>
</Layout>

<style>
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-15px);
    }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  @keyframes shimmer {
    100% {
      transform: translateX(200%);
    }
  }

  .animate-shimmer {
    animation: shimmer 1.5s infinite;
  }

  .store-btn {
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
  }

  /* Apps Buttons Styles */
  @keyframes blink-shadow {
    0%,
    100% {
      box-shadow:
        0 4px 14px rgba(38, 4, 209, 0.7),
        0 -4px 14px rgba(25, 41, 255, 0.9);
    }
    50% {
      box-shadow:
        0 4px 25px rgba(38, 4, 209, 1),
        0 -4px 25px rgba(25, 41, 255, 1);
    }
  }

  .apps-store-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    /* Default (Mobile) styles - let HTML utilities control size if needed or provide small defaults */
    padding: 0 18px;
    background: rgba(0, 0, 0, 0.85);
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 50px;
    box-shadow:
      0 4px 14px rgba(38, 4, 209, 0.7),
      0 -4px 14px rgba(25, 41, 255, 0.9);
    text-decoration: none;
    transition: transform 0.2s;
    animation: blink-shadow 2s infinite;
  }

  /* Desktop Specific Sizes */
  @media (min-width: 768px) {
    .apps-store-btn {
      width: 250px;
      height: 70px;
    }
    .apps-store-btn img {
      height: 50px;
    }
  }

  .apps-store-btn:hover,
  .apps-store-btn:active {
    transform: scale(1.05);
    animation: none; /* Stop blinking on hover */
    box-shadow: 0 6px 20px rgba(55, 27, 190, 0.8);
  }

  .apps-store-btn img {
    /* Base image style for mobile */
    height: 100%;
    width: auto;
    max-width: 100%;
    object-fit: contain;
  }
</style>
