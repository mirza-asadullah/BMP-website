---
// Página Nutrition: contenido específico de Nutrition con hero slider.
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import HomeHero from '../components/home/HomeHero.astro';
import FeatureSlider from '../components/FeatureSlider.astro';
---

<Layout title="BeMind Power - Nutrición" description="BeMind Power: alimentación inteligente para tu bienestar." bodyClass="nutrition-page">
  <div class="nutrition-page-wrap relative min-h-[100dvh] w-full">
    <Header currentPath="/nutrition" />

    <!-- Layout Desktop: usa HomeHero con video y phone de Nutrition, slider inicia en Nutrition (index 4) -->
    <div class="nutrition-desktop-layout">
      <HomeHero
        videoSrc="/asad/an5.mp4"
        phoneSrc="/asad/s5.png"
        titleLine1="Vive saludable"
        titleLine2="Con los tuyos."
        subtitle="Comparte recetas, retos saludables y planes de alimentación en tu red."
        ctaText="Ver Más"
        ctaHref="/app/nutritiondetails"
        titleLine1Key="nutrition.hero.titleLine1"
        titleLine2Key="nutrition.hero.titleLine2"
        subtitleKey="nutrition.hero.subtitle"
        ctaKey="nutrition.hero.cta"
      >
        <FeatureSlider initialIndex={4} />
      </HomeHero>
    </div>

    <!-- Layout Mobile: estructura separada para mejor control -->
    <div class="nutrition-mobile-layout">
      <!-- Video de fondo -->
      <div class="nutrition-mobile-bg">
        <video
          class="nutrition-mobile-video"
          muted
          loop
          playsinline
          preload="auto"
        >
          <source src="/asad/an5.mp4" type="video/mp4" />
        </video>
        <div class="nutrition-mobile-overlay"></div>
        <div class="nutrition-mobile-glow"></div>
      </div>

      <!-- Contenido superior: título + botones -->
      <div class="nutrition-mobile-content">
        <div class="nutrition-mobile-title">
          <h1 class="nutrition-title">
            <span class="nutrition-title-line1" data-i18n="nutrition.hero.titleLine1">Vive saludable</span>
            <span class="nutrition-title-line2" data-i18n="nutrition.hero.titleLine2">Con los tuyos.</span>
          </h1>
          <p class="nutrition-subtitle" data-i18n="nutrition.hero.subtitle">Comparte recetas, retos saludables y planes de alimentación en tu red.</p>
        </div>

        <div class="nutrition-mobile-buttons">
          <a href="/app/nutritiondetails" class="nutrition-cta" data-i18n="nutrition.hero.cta">Ver Más</a>
          <div class="nutrition-badges">
            <a href="#" class="nutrition-store-btn" aria-label="Download on the App Store">
              <img src="/images/app-store-badge.svg" alt="Download on the App Store" />
            </a>
            <a href="#" class="nutrition-store-btn" aria-label="Get it on Google Play">
              <img src="/images/google-play-badge.svg" alt="Get it on Google Play" />
            </a>
          </div>
        </div>
      </div>

      <!-- Slider abajo, inicia en Nutrition (index 4) -->
      <div class="nutrition-mobile-slider">
        <FeatureSlider initialIndex={4} />
      </div>
    </div>
  </div>
</Layout>

<style is:global>
  body.nutrition-page {
    background: #000000;
    overflow-x: hidden;
  }

  .nutrition-desktop-layout {
    display: block;
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .nutrition-mobile-layout {
    display: none;
  }

  @media (max-width: 768px), (hover: none) and (pointer: coarse) and (min-width: 769px) and (max-width: 1366px) {
    body.nutrition-page {
      overflow-x: hidden;
      overscroll-behavior: none;
    }

    .nutrition-desktop-layout {
      display: none;
    }

    .nutrition-mobile-layout {
      display: flex;
      flex-direction: column;
      position: relative;
      width: 100%;
      height: 100dvh;
      height: 100vh;
      overflow: clip;
      box-sizing: border-box;
      padding-top: calc(70px + env(safe-area-inset-top));
      padding-bottom: max(1rem, env(safe-area-inset-bottom));
    }

    .nutrition-mobile-bg {
      position: fixed;
      inset: 0;
      z-index: 0;
      overflow: hidden;
    }

    .nutrition-mobile-video {
      position: absolute;
      top: 50%;
      left: 50%;
      min-width: 100%;
      min-height: 100%;
      width: auto;
      height: auto;
      transform: translate(-50%, -50%);
      object-fit: cover;
      object-position: center;
      opacity: 0.85;
    }

    .nutrition-mobile-overlay {
      position: absolute;
      inset: 0;
      background: rgba(0, 0, 0, 0.3);
      z-index: 1;
    }

    .nutrition-mobile-glow {
      position: absolute;
      top: 40%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 80vw;
      height: 80vw;
      background: radial-gradient(circle, rgba(40, 54, 233, 0.89) 0%, rgba(40, 54, 233, 0.5) 40%, transparent 70%);
      filter: blur(198px);
      z-index: 2;
    }

    .nutrition-mobile-content {
      position: relative;
      z-index: 10;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      flex: 6;
      min-height: 0;
      padding: 0 5%;
      gap: clamp(1rem, 2.5vh, 1.5rem);
    }

    .nutrition-mobile-title {
      text-align: center;
      width: 100%;
    }

    .nutrition-title {
      color: #fff;
      display: flex;
      flex-direction: column;
      gap: 0;
      margin: 0 0 clamp(0.3rem, 1vh, 0.6rem) 0;
      line-height: 1.1;
    }

    .nutrition-title-line1 {
      font-family: 'OPTIFutura-ExtraBlackCond', 'Inter', sans-serif;
      font-size: clamp(24px, 7vw, 40px);
      font-weight: 900;
      letter-spacing: 0.01em;
    }

    .nutrition-title-line2 {
      font-family: 'Neometric', 'Inter', sans-serif;
      font-size: clamp(14px, 4vw, 24px);
      font-weight: 700;
      letter-spacing: 0.01em;
    }

    .nutrition-subtitle {
      color: #fff;
      font-family: 'Neometric', 'Inter', sans-serif;
      font-size: clamp(11px, 2.8vw, 14px);
      font-weight: 400;
      line-height: 1.3;
      margin: 0;
      max-width: 92%;
      margin-left: auto;
      margin-right: auto;
    }

    .nutrition-mobile-buttons {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: clamp(0.4rem, 0.8vh, 0.6rem);
      width: 100%;
    }

    .nutrition-cta {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      height: clamp(42px, 5.5vh, 50px);
      padding: 0 2rem;
      width: min(280px, 72vw);
      background: #1929ff;
      color: #fff;
      font-family: 'OPTIFutura-ExtraBlackCond', 'Inter', sans-serif;
      font-weight: 900;
      font-size: clamp(14px, 3.8vw, 16px);
      letter-spacing: 0.02em;
      border-radius: 999px;
      text-decoration: none;
      transition: transform 0.2s, box-shadow 0.2s;
    }

    .nutrition-cta:hover,
    .nutrition-cta:active {
      transform: scale(1.02);
      box-shadow: 0 4px 24px rgba(25, 41, 255, 0.5);
    }

    .nutrition-badges {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: clamp(0.3rem, 0.6vh, 0.5rem);
    }

    .nutrition-store-btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: min(260px, 68vw);
      height: clamp(42px, 5.5vh, 50px);
      padding: 0 18px;
      background: rgba(0, 0, 0, 0.85);
      border: 1px solid rgba(255, 255, 255, 0.12);
      border-radius: 50px;
      box-shadow: 0 4px 14px rgba(55, 27, 190, 0.25), 0 -4px 14px rgba(25, 41, 255, 0.2);
      text-decoration: none;
      transition: transform 0.2s, box-shadow 0.2s;
    }

    .nutrition-store-btn:hover,
    .nutrition-store-btn:active {
      transform: scale(1.02);
      box-shadow: 0 6px 20px rgba(55, 27, 190, 0.35);
    }

    .nutrition-store-btn img {
      height: clamp(24px, 3.8vh, 32px);
      width: auto;
      max-width: 100%;
      object-fit: contain;
    }

    .nutrition-mobile-slider {
      position: relative;
      z-index: 5;
      width: 100%;
      flex: 4;
      min-height: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0 2%;
      overflow: visible;
    }

    .nutrition-mobile-slider .feature-slider {
      width: 100%;
      height: 100%;
      min-height: 0 !important;
      flex: 1 1 0%;
      overflow: visible;
    }

    .nutrition-mobile-slider .slider-wrapper {
      padding: 0;
      height: 100%;
      min-height: 0;
      flex: 1 1 0%;
      overflow: visible;
    }

    .nutrition-mobile-slider .slider-container {
      height: 100%;
      min-height: 0 !important;
      flex: 1 1 0%;
      overflow: visible;
    }

    .nutrition-mobile-slider .slider-track {
      overflow: visible;
    }

    .nutrition-mobile-slider .slider-nav {
      display: none;
    }
  }

  @media (hover: none) and (pointer: coarse) and (min-width: 769px) and (max-width: 1366px) {
    .nutrition-mobile-layout {
      padding-top: calc(90px + env(safe-area-inset-top));
    }

    .nutrition-mobile-title {
      max-width: 720px;
    }

    .nutrition-cta {
      width: min(520px, 60vw);
    }

    .nutrition-store-btn {
      width: min(520px, 60vw);
    }
  }

  @media (max-width: 768px) and (min-width: 601px) {
    .nutrition-mobile-layout {
      padding-top: calc(80px + env(safe-area-inset-top));
    }

    .nutrition-title-line1 {
      font-size: clamp(34px, 5.5vw, 44px);
    }

    .nutrition-title-line2 {
      font-size: clamp(19px, 3.2vw, 26px);
    }

    .nutrition-subtitle {
      font-size: clamp(13px, 2vw, 16px);
    }

    .nutrition-cta {
      width: min(300px, 55vw);
      height: 52px;
      font-size: 16px;
    }

    .nutrition-store-btn {
      width: min(280px, 52vw);
      height: 52px;
    }

    .nutrition-store-btn img {
      height: 32px;
    }
  }

  @media (max-width: 374px) {
    .nutrition-mobile-layout {
      padding-top: calc(62px + env(safe-area-inset-top));
    }

    .nutrition-mobile-content {
      padding-left: 4%;
      padding-right: 4%;
    }

    .nutrition-title-line1 {
      font-size: clamp(22px, 6.5vw, 28px);
    }

    .nutrition-title-line2 {
      font-size: clamp(13px, 3.8vw, 16px);
    }

    .nutrition-subtitle {
      font-size: 11px;
      max-width: 90%;
    }

    .nutrition-cta {
      width: min(230px, 70vw);
      height: 44px;
      font-size: 14px;
      padding: 0 1.5rem;
    }

    .nutrition-store-btn {
      width: min(210px, 66vw);
      height: 44px;
      padding: 0 14px;
    }

    .nutrition-store-btn img {
      height: 26px;
    }
  }

  @media (max-width: 768px) and (max-height: 650px) {
    .nutrition-mobile-layout {
      padding-top: calc(60px + env(safe-area-inset-top));
    }

    .nutrition-title-line1 {
      font-size: clamp(22px, 6.5vw, 30px);
    }

    .nutrition-title-line2 {
      font-size: clamp(13px, 3.5vw, 17px);
    }

    .nutrition-subtitle {
      font-size: 11px;
    }

    .nutrition-cta {
      height: 40px;
      font-size: 13px;
    }

    .nutrition-store-btn {
      height: 40px;
    }

    .nutrition-store-btn img {
      height: 22px;
    }
  }

  @media (max-width: 640px) {
    body.nutrition-page .support-container {
      top: 50%;
      bottom: auto;
      left: max(16px, calc(env(safe-area-inset-left) + 16px));
      transform: translateY(-50%);
    }

    body.nutrition-page .support-tooltip {
      position: relative;
    }
  }

  @media (max-width: 768px) and (max-height: 500px) and (orientation: landscape) {
    .nutrition-mobile-layout {
      flex-direction: row;
      flex-wrap: wrap;
    }

    .nutrition-mobile-content {
      flex: 1;
      min-width: 50%;
      padding: 60px 2% 0.4rem 2%;
      gap: 0.25rem;
    }

    .nutrition-mobile-title {
      padding: 0;
    }

    .nutrition-title {
      margin-bottom: 0.3rem;
    }

    .nutrition-title-line1 {
      font-size: clamp(18px, 4.5vw, 26px);
    }

    .nutrition-title-line2 {
      font-size: clamp(11px, 2.5vw, 16px);
    }

    .nutrition-subtitle {
      font-size: 10px;
    }

    .nutrition-mobile-buttons {
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
      gap: 0.3rem;
    }

    .nutrition-badges {
      flex-direction: row;
      gap: 0.3rem;
    }

    .nutrition-cta {
      height: 36px;
      width: auto;
      min-width: 130px;
      font-size: 11px;
    }

    .nutrition-store-btn {
      height: 36px;
      width: auto;
      min-width: 125px;
    }

    .nutrition-store-btn img {
      height: 18px;
    }

    .nutrition-mobile-slider {
      width: 100%;
      min-height: 150px;
      max-height: 200px;
    }
  }
</style>

<script>
  function initNutritionMobileVideo(): void {
    const video = document.querySelector('.nutrition-mobile-video') as HTMLVideoElement;
    if (!video) return;

    const playVideo = () => {
      video.play().catch(() => {
        document.addEventListener('touchstart', () => {
          video.play();
        }, { once: true });
      });
    };

    if (video.readyState >= 2) {
      playVideo();
    } else {
      video.addEventListener('loadeddata', playVideo, { once: true });
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initNutritionMobileVideo);
  } else {
    initNutritionMobileVideo();
  }
</script>
