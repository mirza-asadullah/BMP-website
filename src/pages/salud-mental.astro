---
// Página Salud Mental: clonada de /chat con contenido específico de Salud Mental.
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import HomeHero from '../components/home/HomeHero.astro';
import FeatureSlider from '../components/FeatureSlider.astro';
---

<Layout title="BeMind Power - Salud Mental" description="BeMind Power: herramientas de bienestar emocional para ti y tu comunidad de apoyo." bodyClass="saludmental-page">
  <div class="saludmental-page-wrap relative min-h-[100dvh] w-full">
    <Header currentPath="/salud-mental" />

    <!-- Layout Desktop: usa HomeHero con video y phone de Salud Mental, slider inicia en Salud Mental (index 7) -->
    <div class="saludmental-desktop-layout">
      <HomeHero
        videoSrc="/videos/saludmental.mp4"
        phoneSrc="/images/saludmental.png"
        titleLine1="Apoyo real"
        titleLine2="Que inspira confianza."
        subtitle="Herramientas de bienestar emocional para ti y tu comunidad de apoyo."
        ctaText="Ver Más"
        ctaHref="/salud-mental"
        titleLine1Key="saludmental.hero.titleLine1"
        titleLine2Key="saludmental.hero.titleLine2"
        subtitleKey="saludmental.hero.subtitle"
        ctaKey="saludmental.hero.cta"
      >
        <FeatureSlider initialIndex={7} />
      </HomeHero>
    </div>

    <!-- Layout Mobile: estructura separada para mejor control -->
    <div class="saludmental-mobile-layout">
      <!-- Video de fondo -->
      <div class="saludmental-mobile-bg">
        <video
          class="saludmental-mobile-video"
          muted
          loop
          playsinline
          preload="auto"
        >
          <source src="/videos/saludmental.mp4" type="video/mp4" />
        </video>
        <div class="saludmental-mobile-overlay"></div>
        <div class="saludmental-mobile-glow"></div>
      </div>

      <!-- Contenido superior: título + botones -->
      <div class="saludmental-mobile-content">
        <div class="saludmental-mobile-title">
          <h1 class="saludmental-title">
            <span class="saludmental-title-line1" data-i18n="saludmental.hero.titleLine1">Apoyo real</span>
            <span class="saludmental-title-line2" data-i18n="saludmental.hero.titleLine2">Que inspira confianza.</span>
          </h1>
          <p class="saludmental-subtitle" data-i18n="saludmental.hero.subtitle">Herramientas de bienestar emocional para ti y tu comunidad de apoyo.</p>
        </div>

        <div class="saludmental-mobile-buttons">
          <a href="#slider" class="saludmental-cta" data-i18n="saludmental.hero.cta">Ver Más</a>
          <div class="saludmental-badges">
            <a href="#" class="saludmental-store-btn" aria-label="Download on the App Store">
              <img src="/images/app-store-badge.svg" alt="Download on the App Store" />
            </a>
            <a href="#" class="saludmental-store-btn" aria-label="Get it on Google Play">
              <img src="/images/google-play-badge.svg" alt="Get it on Google Play" />
            </a>
          </div>
        </div>
      </div>

      <!-- Slider abajo, inicia en Salud Mental (index 7) -->
      <div class="saludmental-mobile-slider">
        <FeatureSlider initialIndex={7} />
      </div>
    </div>
  </div>
</Layout>

<style is:global>
  body.saludmental-page {
    background: #000000;
    overflow-x: hidden;
  }

  .saludmental-desktop-layout {
    display: block;
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .saludmental-mobile-layout {
    display: none;
  }

  /* ===== MOBILE + TABLETS TÁCTILES ===== */
  @media (max-width: 768px), (hover: none) and (pointer: coarse) and (min-width: 769px) and (max-width: 1366px) {
    body.saludmental-page {
      overflow-x: hidden;
      overscroll-behavior: none;
    }

    .saludmental-desktop-layout {
      display: none;
    }

    /* Layout principal: altura fija al viewport, sin scroll */
    .saludmental-mobile-layout {
      display: flex;
      flex-direction: column;
      position: relative;
      width: 100%;
      height: 100dvh;
      height: 100vh;
      overflow: clip;
      box-sizing: border-box;
      padding-top: calc(70px + env(safe-area-inset-top));
      padding-bottom: max(1rem, env(safe-area-inset-bottom));
    }

    .saludmental-mobile-bg {
      position: fixed;
      inset: 0;
      z-index: 0;
      overflow: hidden;
    }

    .saludmental-mobile-video {
      position: absolute;
      top: 50%;
      left: 50%;
      min-width: 100%;
      min-height: 100%;
      width: auto;
      height: auto;
      transform: translate(-50%, -50%);
      object-fit: cover;
      object-position: center;
      opacity: 0.85;
    }

    .saludmental-mobile-overlay {
      position: absolute;
      inset: 0;
      background: rgba(0, 0, 0, 0.3);
      z-index: 1;
    }

    .saludmental-mobile-glow {
      position: absolute;
      top: 40%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 80vw;
      height: 80vw;
      background: radial-gradient(
        circle,
        rgba(40, 54, 233, 0.89) 0%,
        rgba(40, 54, 233, 0.5) 40%,
        transparent 70%
      );
      filter: blur(198px);
      z-index: 2;
    }

    /* === CONTENIDO SUPERIOR (textos + botones) — 60% del espacio === */
    .saludmental-mobile-content {
      position: relative;
      z-index: 10;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      flex: 6;
      min-height: 0;
      padding: 0 5%;
      gap: clamp(1rem, 2.5vh, 1.5rem);
    }

    .saludmental-mobile-title {
      text-align: center;
      width: 100%;
    }

    .saludmental-title {
      color: #fff;
      display: flex;
      flex-direction: column;
      gap: 0;
      margin: 0 0 clamp(0.3rem, 1vh, 0.6rem) 0;
      line-height: 1.1;
    }

    .saludmental-title-line1 {
      font-family: 'OPTIFutura-ExtraBlackCond', 'Inter', sans-serif;
      font-size: clamp(24px, 7vw, 40px);
      font-weight: 900;
      letter-spacing: 0.01em;
    }

    .saludmental-title-line2 {
      font-family: 'Neometric', 'Inter', sans-serif;
      font-size: clamp(14px, 4vw, 24px);
      font-weight: 700;
      letter-spacing: 0.01em;
    }

    .saludmental-subtitle {
      color: #fff;
      font-family: 'Neometric', 'Inter', sans-serif;
      font-size: clamp(11px, 2.8vw, 14px);
      font-weight: 400;
      line-height: 1.3;
      margin: 0;
      max-width: 92%;
      margin-left: auto;
      margin-right: auto;
    }

    .saludmental-mobile-buttons {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: clamp(0.4rem, 0.8vh, 0.6rem);
      width: 100%;
    }

    .saludmental-cta {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      height: clamp(42px, 5.5vh, 50px);
      padding: 0 2rem;
      width: min(280px, 72vw);
      background: #1929ff;
      color: #fff;
      font-family: 'OPTIFutura-ExtraBlackCond', 'Inter', sans-serif;
      font-weight: 900;
      font-size: clamp(14px, 3.8vw, 16px);
      letter-spacing: 0.02em;
      border-radius: 999px;
      text-decoration: none;
      transition: transform 0.2s, box-shadow 0.2s;
    }

    .saludmental-cta:hover,
    .saludmental-cta:active {
      transform: scale(1.02);
      box-shadow: 0 4px 24px rgba(25, 41, 255, 0.5);
    }

    .saludmental-badges {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: clamp(0.3rem, 0.6vh, 0.5rem);
    }

    .saludmental-store-btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: min(260px, 68vw);
      height: clamp(42px, 5.5vh, 50px);
      padding: 0 18px;
      background: rgba(0, 0, 0, 0.85);
      border: 1px solid rgba(255, 255, 255, 0.12);
      border-radius: 50px;
      box-shadow: 0 4px 14px rgba(55, 27, 190, 0.25), 0 -4px 14px rgba(25, 41, 255, 0.2);
      text-decoration: none;
      transition: transform 0.2s, box-shadow 0.2s;
    }

    .saludmental-store-btn:hover,
    .saludmental-store-btn:active {
      transform: scale(1.02);
      box-shadow: 0 6px 20px rgba(55, 27, 190, 0.35);
    }

    .saludmental-store-btn img {
      height: clamp(24px, 3.8vh, 32px);
      width: auto;
      max-width: 100%;
      object-fit: contain;
    }

    /* === SLIDER ABAJO — 40% del espacio === */
    .saludmental-mobile-slider {
      position: relative;
      z-index: 5;
      width: 100%;
      flex: 4;
      min-height: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0 2%;
      overflow: visible;
    }

    .saludmental-mobile-slider .feature-slider {
      width: 100%;
      height: 100%;
      min-height: 0 !important;
      flex: 1 1 0%;
      overflow: visible;
    }

    .saludmental-mobile-slider .slider-wrapper {
      padding: 0;
      height: 100%;
      min-height: 0;
      flex: 1 1 0%;
      overflow: visible;
    }

    .saludmental-mobile-slider .slider-container {
      height: 100%;
      min-height: 0 !important;
      flex: 1 1 0%;
      overflow: visible;
    }

    .saludmental-mobile-slider .slider-track {
      overflow: visible;
    }

    .saludmental-mobile-slider .slider-nav {
      display: none;
    }
  }

  /* ===== TABLETS TÁCTILES (iPad, etc.) ===== */
  @media (hover: none) and (pointer: coarse) and (min-width: 769px) and (max-width: 1366px) {
    .saludmental-mobile-layout {
      padding-top: calc(90px + env(safe-area-inset-top));
    }

    .saludmental-mobile-title {
      max-width: 720px;
    }

    .saludmental-cta {
      width: min(520px, 60vw);
    }

    .saludmental-store-btn {
      width: min(520px, 60vw);
    }

  }

  /* ===== TABLETS PEQUEÑAS / MÓVILES GRANDES (601-768px) ===== */
  @media (max-width: 768px) and (min-width: 601px) {
    .saludmental-mobile-layout {
      padding-top: calc(80px + env(safe-area-inset-top));
    }

    .saludmental-title-line1 {
      font-size: clamp(34px, 5.5vw, 44px);
    }

    .saludmental-title-line2 {
      font-size: clamp(19px, 3.2vw, 26px);
    }

    .saludmental-subtitle {
      font-size: clamp(13px, 2vw, 16px);
    }

    .saludmental-cta {
      width: min(300px, 55vw);
      height: 52px;
      font-size: 16px;
    }

    .saludmental-store-btn {
      width: min(280px, 52vw);
      height: 52px;
    }

    .saludmental-store-btn img {
      height: 32px;
    }
  }

  /* ===== MÓVILES PEQUEÑOS (<=374px) - iPhone SE ===== */
  @media (max-width: 374px) {
    .saludmental-mobile-layout {
      padding-top: calc(62px + env(safe-area-inset-top));
    }

    .saludmental-mobile-content {
      padding-left: 4%;
      padding-right: 4%;
    }

    .saludmental-title-line1 {
      font-size: clamp(22px, 6.5vw, 28px);
    }

    .saludmental-title-line2 {
      font-size: clamp(13px, 3.8vw, 16px);
    }

    .saludmental-subtitle {
      font-size: 11px;
      max-width: 90%;
    }

    .saludmental-cta {
      width: min(230px, 70vw);
      height: 44px;
      font-size: 14px;
      padding: 0 1.5rem;
    }

    .saludmental-store-btn {
      width: min(210px, 66vw);
      height: 44px;
      padding: 0 14px;
    }

    .saludmental-store-btn img {
      height: 26px;
    }

  }

  /* ===== PANTALLAS MUY CORTAS ===== */
  @media (max-width: 768px) and (max-height: 650px) {
    .saludmental-mobile-layout {
      padding-top: calc(60px + env(safe-area-inset-top));
    }

    .saludmental-title-line1 {
      font-size: clamp(22px, 6.5vw, 30px);
    }

    .saludmental-title-line2 {
      font-size: clamp(13px, 3.5vw, 17px);
    }

    .saludmental-subtitle {
      font-size: 11px;
    }

    .saludmental-cta {
      height: 40px;
      font-size: 13px;
    }

    .saludmental-store-btn {
      height: 40px;
    }

    .saludmental-store-btn img {
      height: 22px;
    }

  }

  /* /salud-mental móvil: centrar botón de asistencia verticalmente */
  @media (max-width: 640px) {
    body.saludmental-page .support-container {
      top: 50%;
      bottom: auto;
      left: max(16px, calc(env(safe-area-inset-left) + 16px));
      transform: translateY(-50%);
    }

    body.saludmental-page .support-tooltip {
      position: relative;
    }
  }

  /* ===== LANDSCAPE ===== */
  @media (max-width: 768px) and (max-height: 500px) and (orientation: landscape) {
    .saludmental-mobile-layout {
      flex-direction: row;
      flex-wrap: wrap;
    }

    .saludmental-mobile-content {
      flex: 1;
      min-width: 50%;
      padding: 60px 2% 0.4rem 2%;
      gap: 0.25rem;
    }

    .saludmental-mobile-title {
      padding: 0;
    }

    .saludmental-title {
      margin-bottom: 0.3rem;
    }

    .saludmental-title-line1 {
      font-size: clamp(18px, 4.5vw, 26px);
    }

    .saludmental-title-line2 {
      font-size: clamp(11px, 2.5vw, 16px);
    }

    .saludmental-subtitle {
      font-size: 10px;
    }

    .saludmental-mobile-buttons {
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
      gap: 0.3rem;
    }

    .saludmental-badges {
      flex-direction: row;
      gap: 0.3rem;
    }

    .saludmental-cta {
      height: 36px;
      width: auto;
      min-width: 130px;
      font-size: 11px;
    }

    .saludmental-store-btn {
      height: 36px;
      width: auto;
      min-width: 125px;
    }

    .saludmental-store-btn img {
      height: 18px;
    }

    .saludmental-mobile-slider {
      width: 100%;
      min-height: 150px;
      max-height: 200px;
    }
  }
</style>

<script>
  function initSaludmentalMobileVideo(): void {
    const video = document.querySelector('.saludmental-mobile-video') as HTMLVideoElement;
    if (!video) return;

    const playVideo = () => {
      video.play().catch(() => {
        document.addEventListener('touchstart', () => {
          video.play();
        }, { once: true });
      });
    };

    if (video.readyState >= 2) {
      playVideo();
    } else {
      video.addEventListener('loadeddata', playVideo, { once: true });
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initSaludmentalMobileVideo);
  } else {
    initSaludmentalMobileVideo();
  }
</script>
